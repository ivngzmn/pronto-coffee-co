<!doctype html>
<html>
<head>

    <title>Pronto Coffee Co.</title>

    
     <!--bootstrap CSS-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Dancing+Script:wght@500&family=Quicksand:wght@300;500;700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="style.css">

</head>
<body>
<div class="container">
  <section>
      <a href="/logout" class="btn-default ">Logout</a>
      <br>
      <a href="/" class="btn-default">Home</a>
    </section>
    <img src="logo.png" alt="Pronto Logo">
    <h1 class="heading">Barista Dashboard</h1>
    <span class="barista"> Welcome:</span>
    <span id="barista"><%= user.local.name %></span>
          <h3 class="barista">Orders:</h3>
          <ul class="orders list-unstyled">
          <% for(var i=0; i <orders.length; i++) {%>
            <li class="orderUp order box-bottom-shadow ">
                <span>Customer Name:</span>
              <span><%= orders[i].name %></span>
              <p>Order: <%= orders[i].order %></p>
              <span class="hide"><%= orders[i].completed %></span>
              <span class="hide"><%= orders[i]._id %></span>
              <p><button type="submit" value="barista" class="btn btn-primary btn-sm completed">Completed</button</p>
            </li>

            </li>
          <% } %>
          </ul>
          
          <h3 class="barista">Completed Orders:</h3>
          <ul class="orders list-unstyled">
          <% for(var i=0; i <completed.length; i++) {%>
            <li class="completedOrders order box-bottom-shadow">
              <p>Barista: <%= completed[i].barista%></p>
              <p>Customer Name: <%= completed[i].name %></p>
              <span>Order: <%= completed[i].order %></span>
              <span class="hide"><%= completed[i]._id %></span>
              <span class="hide"><%= completed[i].completed %></span>
              <p><button type="submit" value="clear" class="btn btn-primary btn-sm clear">Clear</button</p>

            
            </li>
          <% } %>
          </ul>

          <section>
            <h3 class="barista">Add Order:</h3>
            <form action="/add" method="POST">
              <div class="form-group">
                <label for="name">Customer Name:</label>
                <input type="text" class="form-control" id="name" name="name" placeholder="Enter Customer Name">
              </div>
              <div class="form-group">
                <label for="order">Order:</label>
                <input type="text" class="form-control" id="order" name="order" placeholder="Enter Order">
              </div>
              <button type="submit" class="btn btn-primary">Submit</button>
            </form>
          </section>
          <section>
            <h3 class="barista">Remove Order</h3>
            <form action="/remove" method="POST">
              <div class="form-group">
                <label for="name">Customer Name:</label>
                <input type="text" class="form-control" id="name" name="name" placeholder="Enter Customer Name">
              </div>
              <div class="form-group">
                <label for="order">Order:</label>
                <input type="text" class="form-control" id="order" name="order" placeholder="Enter Order">
              </div>
              <button type="submit" class="btn btn-primary">Submit</button>
          </section>
          <section>
            
          </section>

</div>

<script src="profile.js"></script>

</body>
</html>